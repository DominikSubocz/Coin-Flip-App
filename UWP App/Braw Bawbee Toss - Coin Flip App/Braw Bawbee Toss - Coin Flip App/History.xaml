<Page
    x:Class="Braw_Bawbee_Toss___Coin_Flip_App.History"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Braw_Bawbee_Toss___Coin_Flip_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:data="using:Braw_Bawbee_Toss___Coin_Flip_App.Assets.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- In History.xaml -->
    <Grid>
        <GridView ItemsSource="{x:Bind historyItems}" Grid.Row="1" Grid.Column="1">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:HistoryItems">
                    <StackPanel>
                        <TextBlock FontSize="16" Text="{x:Bind CoinType}"/>
                        <TextBlock FontSize="16" Text="{x:Bind Mode}"/>
                        <TextBlock FontSize="16" Text="{x:Bind Result}"/>
                        <TextBlock FontSize="16" Text="{x:Bind Duration}"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>

</Page>
