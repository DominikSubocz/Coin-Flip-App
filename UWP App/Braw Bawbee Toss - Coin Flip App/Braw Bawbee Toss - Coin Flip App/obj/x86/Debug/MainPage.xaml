<Page x:ConnectionId='1'
    x:Class="Braw_Bawbee_Toss___Coin_Flip_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Braw_Bawbee_Toss___Coin_Flip_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid x:ConnectionId='2' x:Name="MainContent" Background="Red">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="75"/>
                
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:ConnectionId='10' x:Name="HeadsScoreTextBlock" FontSize="32" Grid.Column="1" Grid.Row="1" Text="Heads: " HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock x:ConnectionId='11' x:Name="TailsScoreTextBlock" FontSize="32" Grid.Column="2" Grid.Row="1" Text="Tails: " HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <MediaElement x:ConnectionId='12' x:Name="videoPlayer" AutoPlay="False" AreTransportControlsEnabled="True" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>


            <Button x:ConnectionId='13' 
                x:Name="FlipBtn"
                Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" 
                Background="White" Width="250" Height="110" Content="Toss a Cooin" FontSize="24"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                                >
                
            </Button>

            <Button x:ConnectionId='14'                     Grid.Column="4" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Image Source ="Assets\Icons\Burger-Menu\burger.svg" Width="70"/>
            </Button>
        </Grid>
        <SplitView x:ConnectionId='3'  x:Name="MenuSplitView" DisplayMode="Overlay" IsPaneOpen="False" CompactPaneLength="40" OpenPaneLength="175" PanePlacement="Right">
        <SplitView.Pane>
                <StackPanel Background="DarkRed">

                    <Button x:ConnectionId='4'                     Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Image Source ="Assets\Icons\Close-Icon\close.svg" Width="70"/>
                    </Button>
                    <StackPanel Orientation="Horizontal" Padding="0 10 0 0">
                        <Button x:ConnectionId='9' FontSize="25" Height="50" Width="auto" Background="Transparent" Padding="0" HorizontalAlignment="Left"                       >
                            <StackPanel Orientation="Horizontal">
                                <Image Source ="Assets\Icons\History-Icon\history.svg" Width="40"/>
                                <TextBlock Text="Flip History" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>

                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Padding="0 10 0 0">
                        <Button FontSize="25" Height="50" Width="auto" Background="Transparent" Padding="0" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <Image Source ="Assets\Icons\Star-Icon\star.svg" Width="40"/>
                                <TextBlock Text="Try Your Luck" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>

                        </Button>
                    </StackPanel>

                    <StackPanel Height="150" HorizontalAlignment="Center" Padding="0 10 0 0">
                        <ComboBox x:ConnectionId='8' x:Name="FontsCombo" Header="Fonts" Height="50" Width="150" 
                                                        DisplayMemberPath="Source"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Padding="0 10 0 0">
                        <TextBlock Text="Flip Speed" FontSize="16" VerticalAlignment="Center"/>
                        <Slider x:ConnectionId='7' 
                            x:Name="speedSlider" 
                            Width="130"
                            StepFrequency="1"
                                                     />
                    </StackPanel>

                    <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Padding="0 10 0 0" >
                        <TextBlock Text="Flip Duration" FontSize="16" VerticalAlignment="Center"/>
                        <Slider x:ConnectionId='6' 
                            x:Name="durationSlider" 
                            Width="130"
                            StepFrequency="1"
                                                      />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Padding="0 10 0 0">
                        <TextBlock Text="Volume" FontSize="16" VerticalAlignment="Center"/>
                        <Slider x:ConnectionId='5' x:Name="volumeSlider" Width="130"
                                                    />

                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
    </SplitView>
    </Grid>


</Page>

