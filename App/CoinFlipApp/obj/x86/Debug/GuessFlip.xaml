<Page x:ConnectionId='1'
    x:Class="CoinFlipApp.GuessFlip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:data="using:CoinFlipApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required">
    <!-- Main Grid -->

    <Grid>
        <Grid x:ConnectionId='2' x:Name="MainContent" Background="Red">


            <!-- Grid Columns -->

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="75"/>

            </Grid.ColumnDefinitions>
            <!-- Grid Rows -->

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Gray rectangle that fills half of the page -->
            <Rectangle Fill="gray" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="4" />
            <TextBlock Text="Flip History" Margin="10 20 0 0" Grid.ColumnSpan="2" FontSize="30"/>

            <!-- Listview -->
            <!-- This is where the binded items get added after the flip is performed -->

            <ListView x:ConnectionId='9'                                        Margin="0 50 0 0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4">
                <ListView.ItemTemplate>
                    <DataTemplate                              >
                        <StackPanel x:ConnectionId='16' Padding="0 25 0 0">
                            <StackPanel Background="Red" Padding="10">
                                <TextBlock Foreground="White">
                                    <Run Text="Coin Type:"></Run>
                                    <Run x:ConnectionId='21'                         />
                                </TextBlock>
                                <TextBlock Foreground="White">
                                    <Run Text="Guessed:"></Run>
                                    <Run x:ConnectionId='20'                        />
                                </TextBlock>
                                <TextBlock Foreground="White">                                    
                                    <Run Text="Mode:"/>
                                    <Run x:ConnectionId='19'                     />
                                </TextBlock>
                                <TextBlock Foreground="White">                                    
                                    <Run Text="Result:"/>
                                    <Run x:ConnectionId='18'                       />
                                </TextBlock>
                                <TextBlock Foreground="White">                                    
                                    <Run Text="Duration:"/>
                                    <Run x:ConnectionId='17'                         />
                                    <Run Text="s"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- The video player -->

            <MediaElement x:ConnectionId='10' x:Name="videoPlayer" Source="assets\videos\Gold-1-Heads.mp4"
                          AutoPlay="false" AreTransportControlsEnabled="false"
                          Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"/>
            <MediaElement x:ConnectionId='11' x:Name="soundPlayer" Source="Assets/Sounds/coin_flip.wav" AutoPlay="False" IsLooping="False" />

            <!-- Some headings -->

            <TextBlock FontSize="58" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="0" Text="What da flip?!" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

            <TextBlock  FontSize="64" Foreground="White" Grid.Column="2" Grid.Row="2" Text="Heads" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock  FontSize="64" Foreground="White" Grid.Column="5" Grid.Row="2" Text="Tails" HorizontalAlignment="Center" VerticalAlignment="Top"/>






            <!-- Guess Buttons -->
            <!-- They aren't really different, they run the same function -->
            <!-- No scoring this time, a pop up will show letting the user know if they were right or not -->

            <Button x:ConnectionId='12' 
                x:Name="GuessHeadsBtn"
                Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="2" 
                Background="White" Width="150" Height="110" Content="Guess" FontSize="24"
                VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                 
                CornerRadius="50">


            </Button>

            <Button x:ConnectionId='13' 
                x:Name="GuessTailsBtn"
                Grid.Column="5" Grid.ColumnSpan="1" Grid.Row="2" 
                Background="White" Width="150" Height="110" Content="Guess" FontSize="24"
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                 
                CornerRadius="50">


            </Button>


            <!-- Menu Content -->
           
            <!-- Menu button -->
            <Button x:ConnectionId='14'                     Grid.Column="7" Background="Transparent"  HorizontalAlignment="Right" VerticalAlignment="Top">
                <Image Source ="Assets\Icons\Burger-Menu\burger.svg" Width="70"/>
            </Button>
        </Grid>

        <!-- Content when the bar fully extends -->

        <SplitView x:ConnectionId='3'  x:Name="MenuSplitView" DisplayMode="Overlay" IsPaneOpen="False" CompactPaneLength="40" OpenPaneLength="175" PanePlacement="Right">
            <SplitView.Pane>
                <StackPanel Background="DarkRed">
                    
                    <!-- Close button -->
                    <Button x:ConnectionId='4'                     Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Image Source ="Assets\Icons\Close-Icon\close.svg" Width="70"/>
                    </Button>


                    <StackPanel Orientation="Horizontal" Padding="0 10 0 0">
                        <Button x:ConnectionId='8' FontSize="25" Height="50" Width="auto"                         Background="Transparent" Padding="0" HorizontalAlignment="Left">
                            <!-- Coin Flip Button -->
                            <!-- It runs a function that takes you to the coin flip mode -->

                            <StackPanel Orientation="Horizontal">
                                <Image Source ="Assets\Icons\Coin-Icon\coin-icon.svg" Width="40"/>
                                <TextBlock Text="Coin Flip" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>

                        </Button>
                    </StackPanel>

                    <!-- Coin type dropdown -->
                    <!-- It allows you to pick the type of your coin -->
                    <!-- Current coins include: Gold, Silver and Bronze -->

                    <StackPanel Orientation="Vertical" Height="150" Width="170" HorizontalAlignment="Center" Padding="0 10 0 0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source ="Assets\Icons\Coin-Icon\coin-icon.svg" Width="40" VerticalAlignment="Top"/>
                            <TextBlock Text="Coin Type" FontSize="16" VerticalAlignment="Center"/>

                        </StackPanel>

                        <ComboBox x:ConnectionId='7'                                 HorizontalAlignment="Center" x:Name="CoinComboBox" SelectedIndex="0">
                            <ComboBoxItem Content="Gold"/>
                            <ComboBoxItem Content="Silver"/>
                            <ComboBoxItem Content="Bronze"/>
                        </ComboBox>
                    </StackPanel>


                    <!-- Duration Slider -->
                    <!-- You can make the coin flip last longer by adjusting the slider -->
                    <!-- Only range from 1 to 2 available as for now -->


                    <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Padding="0 10 0 0" >
                        <StackPanel Orientation="Horizontal">
                            <Image Source ="Assets\Icons\Time-Icon\time.svg" Width="40" VerticalAlignment="Top"/>
                            <TextBlock Text="Flip Duration" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Slider x:ConnectionId='6' 
                            x:Name="durationSlider" 
                            Width="130"
                            StepFrequency="1"
                            Value="1"
                            Minimum="1"
                            Maximum="2"/>
                    </StackPanel>

                    <!-- Volume Slider -->
                    <!-- Max value had to be set to 10 as anything above that didn't seem to change anything -->

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Padding="0 10 0 0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source ="Assets\Icons\Volume-Icon\volume.svg" Width="40" VerticalAlignment="Top"/>
                            <TextBlock Text="Volume" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Slider x:ConnectionId='5' 
                            Maximum="10"
                            Value="10"
                            x:Name="volumeSlider" 
                            Width="130"
                                                        />

                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>

    </Grid>
</Page>

