<Page x:ConnectionId='1'
    x:Class="CoinFlipApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:CoinFlipApp"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required">
    
    <!-- Main Grid -->
    <Grid>
        
        <!-- Grid Columns -->
        <Grid x:ConnectionId='2' x:Name="MainContent" Background="Red">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="75"/>

            </Grid.ColumnDefinitions>
            
            <!-- Grid Rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>




            <!-- Gray rectangle that fills half of the page -->
            <Rectangle Fill="gray" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="4" />


            <Rectangle Fill="DarkGray"  Grid.Row="3" Grid.Column="2" Width="150" Height="90" VerticalAlignment="Top" Margin="0 50 0 0"  RadiusX="20" RadiusY="50"/>
            <Rectangle Fill="DarkGray" Grid.Row="3" Grid.Column="5" Width="150" Height="90" VerticalAlignment="Top" Margin="0 50 0 0"  RadiusX="20" RadiusY="50"/>

            <TextBlock Text="Flip History" Margin="10 20 0 0" Grid.ColumnSpan="2" FontSize="30"/>


            <!-- Listview -->
            <!-- This is where the binded items get added after the flip is performed -->
            <ListView x:ConnectionId='9'                                        Margin="0 50 0 0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4">
                <ListView.ItemTemplate>
                    <DataTemplate                              >
                        <StackPanel x:ConnectionId='17' Padding="0 25 0 0">
                            <StackPanel Background="Red" Padding="10">
                                <TextBlock Foreground="White">
                                    <Run Text="Coin Type:"></Run>
                                    <Run x:ConnectionId='22'                         />
                                </TextBlock>
                                <TextBlock Foreground="White">
                                    <Run Text="Guessed:"></Run>
                                    <Run x:ConnectionId='21'                        />
                                </TextBlock>
                                <TextBlock Foreground="White">                                    
                                    <Run Text="Mode:"/>
                                    <Run x:ConnectionId='20'                     />
                                </TextBlock>
                                <TextBlock Foreground="White">                                    
                                    <Run Text="Result:"/>
                                    <Run x:ConnectionId='19'                       />
                                </TextBlock>
                                <TextBlock Foreground="White">                                    
                                    <Run Text="Duration:"/>
                                    <Run x:ConnectionId='18'                         />
                                    <Run Text="s"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- The video player -->
            <MediaElement x:ConnectionId='10' x:Name="videoPlayer" Source="assets\videos\Gold-1-Heads.mp4"
                          AutoPlay="false" AreTransportControlsEnabled="false"
                          Width="435"
                          Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,0,3,5"/>

            <!-- The audio player -->
            <MediaElement x:ConnectionId='11' x:Name="soundPlayer" Source="Assets/Sounds/coin_flip.wav" AutoPlay="False" IsLooping="False" />

            <!-- Score headings -->
            <!-- On each flip the value will increment depending on the randomly generated result -->


            <TextBlock x:ConnectionId='12' x:Name="HeadsScoreTextBlock" FontSize="64" Grid.Column="2" Grid.Row="3" Text="0 " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 70"/>
            <TextBlock x:ConnectionId='13' x:Name="TailsScoreTextBlock" FontSize="64" Foreground="White" Grid.Column="5" Grid.Row="3" Text="0 " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 70"/>

            <TextBlock FontSize="84" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="0" Text="Coin Flip" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

            <!-- Some headings -->

            <TextBlock FontSize="55" Grid.Column="2" Grid.Row="2" Text="Heads" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <TextBlock  FontSize="55" Foreground="White" Grid.Column="5" Grid.Row="2" Text="Tails " HorizontalAlignment="Center" VerticalAlignment="Bottom"/>






            <!-- Flip Buttons -->

            <Button x:ConnectionId='14' 
                x:Name="FlipBtn"
                Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="3" 
                Background="White" Width="200" Height="110" Content="Toss a Cooin" FontSize="24"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Margin="0 0 0 60"
                                
                CornerRadius="50">


            </Button>


            <!-- Menu Open Button -->

            <Button x:ConnectionId='15'                     Grid.Column="7" Background="Transparent"  HorizontalAlignment="Right" VerticalAlignment="Top">
                <Image Source ="Assets\Icons\Burger-Menu\burger.svg" Width="70"/>
            </Button>
        </Grid>

        <!-- Menu Content -->

        <SplitView x:ConnectionId='3'  x:Name="MenuSplitView" DisplayMode="Overlay" IsPaneOpen="False" CompactPaneLength="40" OpenPaneLength="175" PanePlacement="Right">
            <SplitView.Pane>
                <StackPanel Background="Gray">
                    
                    <!-- Close button -->
                    <Button x:ConnectionId='4'                     Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Image Source ="Assets\Icons\Close-Icon\close.svg" Width="70"/>
                    </Button>

                    <!-- Guess Mode Button -->
                    <!-- It runs a function that takes you to the guess flip mode -->

                    <StackPanel Orientation="Horizontal" Padding="0 10 0 0">
                        <Button x:ConnectionId='8' FontSize="25" Height="50" Width="auto" Background="Transparent" Padding="0" HorizontalAlignment="Left"                     >
                            <StackPanel Orientation="Horizontal">
                                <Image Source ="Assets\Icons\Star Icon\star.svg" Width="40"/>
                                <TextBlock Text="Guess Mode" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>

                        </Button>
                    </StackPanel>
                    
                    <!-- Coin type dropdown -->
                    <!-- It allows you to pick the type of your coin -->
                    <!-- Current coins include: Gold, Silver and Bronze -->

                    <StackPanel Orientation="Vertical" Height="150" Width="170" HorizontalAlignment="Center" Padding="0 10 0 0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source ="Assets\Icons\Coin-Icon\coin-icon.svg" Width="40" VerticalAlignment="Top"/>
                            <TextBlock Text="Coin Type" FontSize="16" VerticalAlignment="Center"/>

                        </StackPanel>

                        <ComboBox x:ConnectionId='7'                                 HorizontalAlignment="Center" x:Name="CoinComboBox" SelectedIndex="0">
                            <ComboBoxItem Content="Gold"/>
                            <ComboBoxItem Content="Silver"/>
                            <ComboBoxItem Content="Bronze"/>
                        </ComboBox>
                    </StackPanel>


                    <!-- Duration Slider -->
                    <!-- You can make the coin flip last longer by adjusting the slider -->
                    <!-- Only range from 1 to 2 available as for now -->

                    <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Padding="0 10 0 0" >
                        <StackPanel Orientation="Horizontal">
                            <Image Source ="Assets\Icons\Time-Icon\time.svg" Width="40" VerticalAlignment="Top"/>

                            <TextBlock Text="Flip Duration" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>


                        <Slider x:ConnectionId='6' 
                            x:Name="durationSlider" 
                            Width="130"
                            StepFrequency="1"
                            Value="1"
                            Minimum="1"
                            Maximum="2"/>
                    </StackPanel>
                    <!-- Volume Slider -->
                    <!-- Max value had to be set to 10 as anything above that didn't seem to change anything -->

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Padding="0 10 0 0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source ="Assets\Icons\Volume-Icon\volume.svg" Width="40" VerticalAlignment="Top"/>
                            <TextBlock Text="Volume" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Slider x:ConnectionId='5' 
                            Maximum="10"
                            Value="10"
                            x:Name="volumeSlider" 
                            Width="130"
                                                        />

                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>

